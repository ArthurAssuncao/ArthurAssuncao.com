{
  "name": "arthurassuncao.com",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && yarn build-sw  && yarn clean-cra-sw",
    "test": "react-scripts test",
    "coverage": "react-scripts test --env=jsdom --coverage",
    "eject": "react-scripts eject",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "build-sw": "node ./src/sw-build.js",
    "clean-cra-sw": "rm -f build/precache-manifest.*.js & rm -f build/service-worker.js",
    "lint": "yarn run lint:md & yarn run lint:stylelint & yarn run lint:eslint",
    "lint:fix": "yarn run lint:md --fix & yarn run lint:stylelint --fix & yarn run lint:eslint --fix",
    "lint:eslint": "eslint ./src --ext .js,.ts,.tsx",
    "lint:stylelint": "stylelint './src/*{.css,.scss,.ts,.tsx}' --syntax scss",
    "lint:md": "markdownlint ./ --ignore node_modules --ignore build",
    "update": "yarn upgrade --latest"
  },
  "pre-commit": [
    "lint"
  ],
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@oclif/config": "^1.13.2",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/react-helmet": "^5.0.8",
    "@types/styled-components": "^4.1.18",
    "coveralls": "^3.0.5",
    "eslint-config-react-app": "^4.0.1",
    "lodash.merge": "^4.6.2",
    "markdownlint": "^0.16.0",
    "markdownlint-cli": "^0.17.0",
    "netlify": "^2.4.6",
    "netlify-cli": "^2.11.27",
    "pre-commit": "^1.2.2",
    "prop-types": "^15.7.2",
    "react-helmet": "^5.2.1",
    "react-icons": "^3.7.0",
    "react-is": "^16.8.6",
    "styled-components": "^4.3.2",
    "styled-reset": "^3.0.0",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "stylelint-scss": "^3.9.2",
    "stylis": "^3.5.4",
    "typescript": "^3.5.3",
    "typescript-eslint-parser": "^22.0.0",
    "workbox-build": "^4.3.1",
    "workbox-cli": "^4.3.1"
  }
}
